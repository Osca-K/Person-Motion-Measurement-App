<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Acceleration and Sub control for it -->


    <TextView
        android:id="@+id/tv_ori_x_label3"

        android:layout_width="98dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:text="SPEED (m/s) "
        app:layout_constraintEnd_toStartOf="@+id/tvSpeed"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ori_x_label5" />

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/_0_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLatitude" />

    <TextView
        android:id="@+id/tv_acceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/acceleration"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_acc_x_label"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="2dp"
        android:text="@string/x"
        app:layout_constraintBottom_toTopOf="@+id/tvXacceleration"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Controls where the accerleraction I must update -->

    <TextView
        android:id="@+id/tv_acc_y_label"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:text="@string/y"
        app:layout_constraintBottom_toTopOf="@+id/tvYacceleration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_acc_z_label"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:text="@string/z"
        app:layout_constraintBottom_toTopOf="@+id/tvZacceleration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvXacceleration"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvYacceleration"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvZacceleration"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- End of the Acceleration properites and controls -->


    <TextView
        android:id="@+id/tvYorientation"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYacceleration" />

    <TextView
        android:id="@+id/tv_ori_z_label"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:text="@string/zAzimuth"
        app:layout_constraintBottom_toTopOf="@+id/tvYorientation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ORIENTATION"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYacceleration" />

    <TextView
        android:id="@+id/tv_ori_y_label"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:text="@string/yRoll"
        app:layout_constraintBottom_toTopOf="@+id/tvZorientation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_ori_x_label"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:text="@string/xPitch"
        app:layout_constraintBottom_toTopOf="@+id/tvXorientation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvZorientation"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvZacceleration" />

    <TextView
        android:id="@+id/tvXorientation"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvXacceleration" />


    <!-- End of Orientation Measurements and pPROPERTIES  -->


    <!--  Gyscope for angular acceleration and all-->


    <TextView
        android:id="@+id/tvYangularVelocity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gyroscope" />

    <TextView
        android:id="@+id/tv_ori_y_label2"
        android:layout_width="88dp"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:text="@string/theta_dot_y"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYorientation" />

    <TextView
        android:id="@+id/tv_gyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="GYROSCOPE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYorientation" />


    <!-- Global Position System -->

    <TextView
        android:id="@+id/tv_ori_z_label2"
        android:layout_width="87dp"
        android:layout_height="26dp"
        android:layout_marginTop="52dp"
        android:text="@string/theta_dot_z"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvZorientation" />

    <TextView
        android:id="@+id/tvXangularVelocity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvXorientation" />

    <TextView
        android:id="@+id/tv_ori_x_label2"
        android:layout_width="87dp"
        android:layout_height="26dp"
        android:layout_marginTop="52dp"
        android:text="@string/theta_dot_x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvXorientation" />

    <TextView
        android:id="@+id/tvZangularVelocity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/tvYangularVelocity"
        app:layout_constraintTop_toBottomOf="@+id/tvZorientation" />

    <TextView
        android:id="@+id/tv_gyroscope2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/global_positioning_system"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYangularVelocity" />


    <TextView
        android:id="@+id/tvLongitude"
        android:layout_width="82dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gyroscope2" />

    <TextView
        android:id="@+id/tv_ori_x_label5"

        android:layout_width="82dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:text="@string/latitude"
        app:layout_constraintEnd_toStartOf="@+id/tvLatitude"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ori_x_label4" />

    <TextView
        android:id="@+id/tv_ori_x_label4"

        android:layout_width="81dp"
        android:layout_height="34dp"
        android:layout_marginTop="13dp"
        android:text="LONGITUDE"
        app:layout_constraintEnd_toStartOf="@+id/tvLongitude"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gyroscope2" />

    <TextView
        android:id="@+id/tvLatitude"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLongitude" />

    <!-- End of GPS CONTROLS AND Properties-->

    <!--Button Content -->

    <!--End of all the controls and properties of the UI -->

    <!--    LOGGING THE DATA OF MOTION -->

    <TextView
        android:id="@+id/tv_ori_x_label6"

        android:layout_width="96dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:text="DISTANCE (m) "
        app:layout_constraintEnd_toStartOf="@+id/tvDistance"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ori_x_label3" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/_0_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSpeed" />

    <Button
        android:id="@+id/btnRun"
        android:layout_width="226dp"
        android:layout_height="48dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:padding="8dp"
        android:text="Start Application Motion"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gyroscope2" />

    <Button
        android:id="@+id/btnLogMotion"
        android:layout_width="281dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:text="Log Motion into Database"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gyroscope3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="96dp"
        android:text="Sampling rate (Hz)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ori_x_label6" />

    <EditText
        android:id="@+id/etnSampleRate"
        android:layout_width="59dp"
        android:layout_height="50dp"

        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="text"
        android:text="50"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/tvDistance" />

    <TextView
        android:id="@+id/tv_gyroscope3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="MOTION LOGGING "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRun" />

    <Button
        android:id="@+id/btnClearData"
        android:layout_width="179dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:text="Clear Database"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gyroscope3" />

</androidx.constraintlayout.widget.ConstraintLayout>